<div id='search-logo'>
<h2>SunnySide</h2>
</div>

<div id='main'>
<header>Contractor Search</header>

<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this contractor from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <div id="scope_box">
  <%= f.label "Property Type" %><br>
  <%= f.check_box :scope %>
  <%= f.label :scope, 'Single Family', :value => 'Single Family' %> <br>
  <%= f.check_box :scope %>
  <%= f.label :scope, 'Duplex, Triplex, Quadraplex', :value => 'Duplex, Triplex, Quadraplex' %><br>
  <%= f.check_box :scope %>
  <%= f.label :scope, 'Multifamily', :value => 'Multifamily' %><br>
</div>
</div>

  <% end %>
  <div id="floating-panel">
  <input id="latlng" type="text" value="">
    <button id="drop" onclick="drop()">Place Markers</button>
  </div>
</div> 

<div hidden>

  <div id="customerLat">
    <%= @customer.Lat %>
  </div>

  <div id="customerLan">
    <%= @customer.Lan %>
  </div>

</div>

<div id="map"></div>
<script>

  // If you're adding a number of markers, you may want to drop them on the map
  // consecutively rather than all at once. This example shows how to use
  // window.setTimeout() to space your markers' animation.

  var customerLat = parseFloat($('#customerLat').text());
  var customerLan = parseFloat($('#customerLan').text());

  var neighborhoods = [  ];

  var markers = [];
  var map;

  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 9,
      scrollwheel: false,
      center: {lat: customerLat, lng: customerLan}
    });
    drop()
  }

  function drop() {
  	neighborhoods = [  ];
  	var latOutput = [];
  	var lngOutput = [];
    $(".resultsLat").each(function(){
    	latOutput.push(parseFloat($(this).html()))
    });
    $(".resultsLng").each(function(){
    	lngOutput.push(parseFloat($(this).html()))
    });
    for (var x = 0; x < latOutput.length; x++) {
    neighborhoods.push({lat: latOutput[x],	lng: lngOutput[x]});
    }
    clearMarkers()
    for (var i = 0; i < neighborhoods.length; i++) {
      addMarkerWithTimeout(neighborhoods[i], i * 200);
    }
  }

  function addMarkerWithTimeout(position, timeout) {
    window.setTimeout(function() {
      markers.push(new google.maps.Marker({
        position: position,
        map: map,
        animation: google.maps.Animation.DROP
      }));
    }, timeout);
  }

  function clearMarkers() {
    for (var i = 0; i < markers.length; i++) {
      markers[i].setMap(null);
    }
    markers = [];
  }

</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqe8yyumuH7IeEjNPgHpflzULL9NnXulE&callback=initMap">
</script>

<% results = Customer.searchResults(@customer, @contractors) %>

<div id='main'>
<br>
