<div id="map"></div>
<script>

  // If you're adding a number of markers, you may want to drop them on the map
  // consecutively rather than all at once. This example shows how to use
  // window.setTimeout() to space your markers' animation.

  var customerLat = parseFloat($('#customerLat').text());
  var customerLan = parseFloat($('#customerLan').text());

  var neighborhoods = [  ];

  var markers = [];
  var map;

  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      scrollwheel: false,
      center: {lat: customerLat, lng: customerLan}
    });
  }

  function drop() {
  	neighborhoods = [  ];
  	var latOutput = [];
  	var lngOutput = [];
    $(".resultsLat").each(function(){
    	latOutput.push(parseFloat($(this).html()))
    });
    $(".resultsLng").each(function(){
    	lngOutput.push(parseFloat($(this).html()))
    });
    console.log(latOutput);
    console.log(lngOutput);
    for (var x = 0; x < latOutput.length; x++) {
    neighborhoods.push({lat: latOutput[x],	lng: lngOutput[x]});
    }
    clearMarkers()
    console.log(neighborhoods);
    for (var i = 0; i < neighborhoods.length; i++) {
      addMarkerWithTimeout(neighborhoods[i], i * 200);
    }
  }

  function addMarkerWithTimeout(position, timeout) {
    window.setTimeout(function() {
      markers.push(new google.maps.Marker({
        position: position,
        map: map,
        animation: google.maps.Animation.DROP
      }));
    }, timeout);
  }

  function clearMarkers() {
    for (var i = 0; i < markers.length; i++) {
      markers[i].setMap(null);
    }
    markers = [];
  }

</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqe8yyumuH7IeEjNPgHpflzULL9NnXulE&callback=initMap">
</script>

