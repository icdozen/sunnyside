<div hidden>

  <div id="customerLat">
    <%= @customer.Lat %>
  </div>

  <div id="customerLan">
    <%= @customer.Lan %>
  </div>

</div>

<div id="map"></div>
<script>

  // If you're adding a number of markers, you may want to drop them on the map
  // consecutively rather than all at once. This example shows how to use
  // window.setTimeout() to space your markers' animation.

  var customerLat = parseFloat($('#customerLat').text());
  var customerLan = parseFloat($('#customerLan').text());

  var neighborhoods = [  ];

  var markers = [];
  var map;

  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 9,
      scrollwheel: false,
      center: {lat: customerLat, lng: customerLan}
    });

    var infoWindow = new google.maps.InfoWindow({map: map});
    // Try HTML5 geolocation.
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        var pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        };
        window.pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        };

        infoWindow.setPosition(pos);
        infoWindow.setContent('Gotcha');
        map.setCenter(pos);

      // function populateField (){


        $('#contractor_Lat').val(pos.lat);
        $('#contractor_Lng').val(pos.lng);
      // };
      console.log(pos.formatted_address);

      }, function() {
        handleLocationError(true, infoWindow, map.getCenter());
      });
    } else {
      // Browser doesn't support Geolocation
      handleLocationError(false, infoWindow, map.getCenter());
    }
    var geocoder = new google.maps.Geocoder();

    document.getElementById('drop').addEventListener('click', function() {
      $('#submit_edit').prop('disabled', false);

      geocodeAddress(geocoder, map);
    });

    drop()
  }

  
  function geocodeAddress(geocoder, resultsMap) {
    var address = document.getElementById('contractor_address').value;
    geocoder.geocode({'address': address}, function(results, status) {
      if (status === google.maps.GeocoderStatus.OK) {
        resultsMap.setCenter(results[0].geometry.location);

        var marker = new google.maps.Marker({
          map: resultsMap,
          position: results[0].geometry.location
        });
        // alert(marker["position"].lat());
        $('#contractor_Lat').val(marker["position"].lat());
        $('#contractor_Lng').val(marker["position"].lng());

        window.marker = new google.maps.Marker({
          map: resultsMap,
          position: results[0].geometry.location
        });
      } else {
        alert('Sorry not able to find you for the following reason: ' + status);
      }
    });


  }

  function handleLocationError(browserHasGeolocation, infoWindow, pos) {
    infoWindow.setPosition(pos);
    infoWindow.setContent(browserHasGeolocation ?
                          'Error: The Geolocation service failed.' :
                          'Error: Your browser doesn\'t support geolocation.');
  }





  
  function drop() {
  	neighborhoods = [  ];
  	var latOutput = [];
  	var lngOutput = [];
    $(".resultsLat").each(function(){
    	latOutput.push(parseFloat($(this).html()))
    });
    $(".resultsLng").each(function(){
    	lngOutput.push(parseFloat($(this).html()))
    });
    for (var x = 0; x < latOutput.length; x++) {
    neighborhoods.push({lat: latOutput[x],	lng: lngOutput[x]});
    }
    clearMarkers()
    for (var i = 0; i < neighborhoods.length; i++) {
      addMarkerWithTimeout(neighborhoods[i], i * 200);
    }
  }

  function addMarkerWithTimeout(position, timeout) {
    window.setTimeout(function() {
      markers.push(new google.maps.Marker({
        position: position,
        map: map,
        animation: google.maps.Animation.DROP
      }));
    }, timeout);
  }

  function clearMarkers() {
    for (var i = 0; i < markers.length; i++) {
      markers[i].setMap(null);
    }
    markers = [];
  }

</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqe8yyumuH7IeEjNPgHpflzULL9NnXulE&callback=initMap">
</script>

