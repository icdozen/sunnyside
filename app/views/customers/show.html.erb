  <%= mapthis[:scope] %><br>
  <%= number_to_phone(mapthis[:phone]) %><br>
  <%= mapthis[:email] %><br>
  <div class="resultsLat" hidden>
    <%= mapthis[:Lat] %>
  </div>
  <div class="resultsLng" hidden>
    <%= mapthis[:Lng] %>
  </div>
<% end %>
</div>
